{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": 2,
                    "items": [
                        {
                            "type": "ColumnSet",
                            "columns": [
                                {
                                    "type": "Column",
                                    "width": "200px",
                                    "items": [
                                        {
                                            "type": "TextBlock",
                                            "text": "Dhaba Delicious",
                                            "weight": "bolder",
                                            "size": "medium",
                                            "spacing": "Small",
                                            "wrap": true,
                                            "style": "heading",
                                            "color": "default",
                                            "isSubtle": false,
                                            "horizontalAlignment": "left"
                                        }
                                    ]
                                },
                                {
                                    "type": "Column",
                                    "width": "auto",
                                    "verticalContentAlignment": "Center",
                                    "items": [
                                        {
                                            "type": "Image",
                                            "url": "https://dhabadeliciousstorage.blob.core.windows.net/icons/icons8-veg-48.png",
                                            "size": "auto",
                                            "width": "20px"
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "type": "TextBlock",
                            "text": "${address.addressLocality}, ${address.addressRegion}",
                            "wrap": true,
                            "spacing": "Small"
                        },
                        {
                            "type": "TextBlock",
                            "$when": "${aggregateRating.ratingValue <= 1}",
                            "text": "${aggregateRating.ratingValue} star (${aggregateRating.reviewCount} reviews) · ${priceRange}",
                            "isSubtle": true,
                            "spacing": "Small",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "$when": "${aggregateRating.ratingValue >= 2}",
                            "text": "${aggregateRating.ratingValue} stars (${aggregateRating.reviewCount} reviews) · ${priceRange}",
                            "isSubtle": true,
                            "spacing": "Small",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "text": "**${review[0].author}** said \"${review[0].description}\"",
                            "size": "Small",
                            "spacing": "Small",
                            "wrap": true,
                            "isSubtle": true,
                            "maxLines": 4
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": 1,
                    "items": [
                        {
                            "type": "Image",
                            "url": "${image}",
                            "altText": "${imageAlt}",
                            "size": "Large"
                        }
                    ]
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Select",
                            "style" :"default",
                            "data" : ""
                        }
                    ]
                }
            ]
        }
    ]
}